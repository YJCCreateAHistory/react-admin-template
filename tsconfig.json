{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "allowJs": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "dom",
      "dom.iterable"
    ],
    "paths":{
      "@/*": ["./client/src/*"],
      "@/redux/*": ["./client/src/redux/*"],
      "@/assets/*": ["./client/src/assets/*"],
      "@/components/*": ["./client/src/components/*"],
      "@/pages/*": ["./client/src/pages/*"],
      "@/style/*": ["./client/src/style/*"],
      "@/types/*": ["./client/src/types/*"],
      "@/route/*": ["./client/src/route/*"],
    }
  },
  "include": [ "./client/src/**/*", "client/helper/help.ts" ],
  "exclude": [
    "node_modules",
    "build",
    "packUp"
  ]
}